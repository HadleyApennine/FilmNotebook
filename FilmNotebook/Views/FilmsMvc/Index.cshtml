@model IEnumerable<Film>

    <h1>Films</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model)
            {
            <tr>
                <td>@film.Title</td>
                <td>@film.Director</td>
                <td>@film.ReleaseYear</td>
                <td>@film.Description</td>
            </tr>
            }
        </tbody>
    </table>
